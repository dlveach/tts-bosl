<XmlLayout xmlns="XmlLayout"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="XmlLayout Configuration/XmlLayout.xsd">

<Defaults>
  <Row  dontUseTableRowBackground="true" />
  <Cell dontUseTableCellBackground="true" />
  <Image color="rgb(1,1,0)" raycastTarget="true"  onClick="arrowClick" />
</Defaults>

<Panel id="mainPanel" active="false" scale="2 2"
       color="rgba(0,0,0,0)" width="100" height="600" rotation="0 0 90" position="0 0 0">
  <TableLayout>
    <Row prefferredHeight="80">
      <Cell>
        <Panel id="upPanel" active="true">
          <Image id="upArrow" image="Sprites/Icons/Arrow_Up" />
        </Panel>
      </Cell>
    </Row>
    <Row prefferredHeight="100">
      <Cell>
        <Panel color="rgba(0,0,0,0)"/>
      </Cell>
    </Row>
    <Row prefferredHeight="80">
      <Cell>
        <Panel id="downPanel" active="true">
          <Image id="downArrow" image="Sprites/Icons/Arrow_Down" />
        </Panel>
      </Cell>
    </Row>
  </TableLayout>
</Panel>

</XmlLayout>
