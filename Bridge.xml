<XmlLayout xmlns="XmlLayout"xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="XmlLayout Configuration/XmlLayout.xsd">

<Include src="XmlDefaults.xml"/>

<Defaults>  <!-- Bridge.xml specific defaults -->
  <Image color="rgb(1,1,0)" raycastTarget="true" onClick="arrowClick"/>
</Defaults>

<Panel id="mainPanel" active="false" class="Clear" width="200" height="200" rotation="0 0 0" position="0 0 0">
  <TableLayout>
    <Row prefferredHeight="80">
      <Cell><Panel id="upPanel"><Image id="upArrow" image="Sprites/Icons/Arrow_Up"/></Panel></Cell>
    </Row>
    <Row prefferredHeight="40"><Cell><Panel class="Clear"/></Cell></Row>
    <Row prefferredHeight="80">
      <Cell><Panel id="downPanel"><Image id="downArrow" image="Sprites/Icons/Arrow_Down"/></Panel></Cell>
    </Row>
  </TableLayout>
</Panel>

</XmlLayout>
