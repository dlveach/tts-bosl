<Defaults>

  <Row  dontUseTableRowBackground="true" />

  <Cell dontUseTableCellBackground="true" />

  <Button hoverClass="hover"
          pressClass="press"
          selectClass="select"
          onClick="Global/buttonClick"
          color="blue"
          textColor="white"
          font="Arial"
          fontSize="16"
          image="Sprites/Layout/Button"
          textShadow="rgba(0,0,0,0.6)" />

  <Button class="hover"
          color="cyan"
          textColor="white"
          textShadow="rgba(0,0,0,1)"/>

  <Button class="press"
          color="blue"
          textColor="white" />

  <Button class="select"
          color="blue"
          textColor="white"
          textShadow="rgba(0,0,0,1)" />

  <Text scale="0.5 0.5" />

  <Panel class="buttonPanel"
         active="false"
         rotation="180 180 0"
         scale="0.2 0.2"
         color="rgba(0,0,0,0)"
         width="260" height="50"
         />

</Defaults>

