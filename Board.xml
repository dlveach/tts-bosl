<XmlLayout xmlns="XmlLayout" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="XmlLayout Configuration/XmlLayout.xsd">

<Include src="XmlDefaults.xml"/>

<Defaults>  <!-- Board.xml specific defaults -->
  <Panel class="Player" width="260" height="50" scale="0.2 0.2" active="false" rotation="180 180 0" />
  <Panel class="City" active="true" rotation="180 180 0" scale="0.2 0.24" color="rgba(0,0,0,1)" width="40" height="36" />
